<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/count_down_timer"
        android:layout_width="99dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="400dp"
        android:text="@string/timerheader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/time_cuircle"
        android:layout_width="301dp"
        android:layout_height="335dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        android:contentDescription="@string/time_circle"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/play_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/time_circle" />

    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="102dp"
        android:layout_height="109dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="247dp"
        android:layout_marginBottom="176dp"
        android:contentDescription="@string/play_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count_down_timer"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/start" />

    <ImageButton
        android:id="@+id/paus_button"
        android:layout_width="106dp"
        android:layout_height="104dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="176dp"
        android:contentDescription="@string/pause_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/play_button"
        app:layout_constraintTop_toBottomOf="@+id/count_down_timer"
        app:srcCompat="@drawable/pause" />

</androidx.constraintlayout.widget.ConstraintLayout>